<launch>
    <arg name="pkg" value="auv_tasks" />
    <arg name="name" value="teleop_task" />
    <arg name="type" default="teleop_task" />
    <arg name="rate" default="30" />
    <arg name="args" value="_loop_rate:=$(arg rate)" />
    <arg name="manager" default="manager" />
    <arg name="nodelet" default="false" />

    <rosparam command="load" param="joystick/assignments" file="$(find teleop_config)/params/joystick_xbox360.yaml" />

    <node
        pkg="$(arg pkg)"
        type="$(arg type)"
        name="$(arg name)"
        args="$(arg args)"
        output="screen" />
</launch>
