# Parse commands ###############################################

function usage()
{
    echo ""
    echo "Usage: `basename $0` package library [-u user] [-p project]"
    echo ""
}

if [ $# -lt 2 ]; then
    usage
    exit
fi

package_name=$1; shift
library_name=$1; shift

package_path=`rospack find $package_name`
if [ -z "$package_path" ]; then exit; fi

while (( "$#" )); do

    case $1 in
	-p ) shift
	    if [ -n "$project" ]; then
		usage
		exit
	    else
		project=$1
		shift
	    fi
	    ;;
	-u ) shift
	    if [ -z "$users" ]; then
		users="$1"
	    else
		users="$users, $1"
	    fi
	    shift
	    ;;
	* ) 
	    if [ -n "$1" ]; then
		usage
		exit
	    else
		shift
	    fi
	    ;;
    esac
done

if [ -z "$project" ]; then project="USC AUV"; fi
if [ -z "$users" ]; then users=`whoami`; fi

# Process Text #################################################

library_name=`echo $library_name | tr " " _`
package_name=`echo $package_name | tr " " _`

LibraryName=`echo $library_name | sed 's/[a-z]/\U&/' |sed 's/_[a-z]/\U\0/g' | tr -d _`
LIBRARYNAME=`echo $library_name | sed 's/[a-z]/\U&/g'| tr -d _`

PackageName=`echo $package_name | sed 's/[a-z]/\U&/' |sed 's/_[a-z]/\U\0/g' | tr -d _`
PACKAGENAME=`echo $package_name | sed 's/[a-z]/\U&/g' | tr -d _`

PROJECTNAME=`echo $project | tr -d " " | tr -d _ | sed 's/[a-z]/\U&/g'`

header_file="$library_name.h"
cpp_file="$library_name.cpp"
cmake_file="CMakeLists.txt"

include_path="include/$package_name"
library_path="src"

header_path="$include_path/$header_file"
cpp_path="$library_path/$cpp_file"
cmake_path="$cmake_file"

IFNDEF_TEXT="$PROJECTNAME""_""$PACKAGENAME""_""$NODENAME"""

header_text="
#ifndef $IFNDEF_TEXT
#define $IFNDEF_TEXT

// ROS
#include <ros/ros.h>

class "$LibraryName"
{
  
};

#endif // $IFNDEF_TEXT"

cpp_text="
#include <$package_name/$header_file>"

cmake_text="

# Auto-generated by uscauv-add-library
rosbuild_add_library( $package_name $cpp_path )"

# Make the magic happen ########################################

cd $package_path

if [ ! -d  "$include_path" ]; then mkdir -vp $include_path; fi
if [ ! -d  "$library_path" ];    then mkdir -vp $library_path;    fi

echo "$header_text" > $header_path
echo "$cpp_text" > $cpp_path
# Note that this one is appended:
echo "$cmake_text" >> $cmake_path

uscauv-add-license -u "$users" -p "$project" -f $header_path $cpp_path
uscauv-print-logo